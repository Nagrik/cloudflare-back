{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "@cloudflare/workers-types",
      "@types/jest",
      "@types/service-worker-mock"
    ],
    "jsx": "react"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "test"]
}
